<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/gg_bg_dialog"
              android:paddingTop="20dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
        >

    <TextView
            android:id="@id/tv_dde_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="12dp"
            android:text=""/>

    <TextView
            android:id="@id/tv_dde_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_marginTop="25dp"
            android:text=""/>

    <EditText
            android:id="@id/edt_dde_one_content"
            style="@style/more_edit_dialog_edit"
            android:hint=""
            />

    <TextView
            android:id="@id/tv_dde_one_error"
            style="@style/more_edit_dialog_error_tip"
            android:text=""/>

    <EditText
            android:id="@id/edt_dde_two_content"
            style="@style/more_edit_dialog_edit"
            android:hint=""
            android:layout_marginTop="8dp"
            />

    <TextView
            android:id="@id/tv_dde_two_error"
            style="@style/more_edit_dialog_error_tip"
            android:text=""/>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="19dp"
            android:background="#b8b8b8"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@id/ll_dde_cancel"
                style="@style/more_edit_dialog_action_area"
                android:background="@drawable/gg_dialog_left_btn">

            <TextView
                    android:id="@id/tv_dde_left_content"
                    style="@style/more_edit_dialog_action_text"
                    android:text=""/>
        </LinearLayout>

        <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#b8b8b8"/>


        <LinearLayout
                android:id="@id/ll_dde_confirm"
                style="@style/more_edit_dialog_action_area"
                android:background="@drawable/gg_dialog_right_btn">

            <TextView
                    android:id="@id/tv_dde_right_content"
                    style="@style/more_edit_dialog_action_text"
                    android:text=""/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>